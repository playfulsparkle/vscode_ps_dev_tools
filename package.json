{
  "name": "ps-dev-tools",
  "displayName": "ps_dev_tools",
  "description": "Visual Studio Code developer tools extension",
  "version": "0.0.1",
  "license": "BSD-3-Clause",
  "icon": "img/icon.png",
  "engines": {
    "vscode": "^1.98.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/playfulsparkle/vscode_ps_dev_tools.git"
  },
  "bugs": {
    "url": "https://github.com/playfulsparkle/vscode_ps_dev_tools/issues"
  },
  "homepage": "https://github.com/playfulsparkle/vscode_ps_dev_tools#readme",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "keywords": [
    "remove",
    "delete",
    "empty",
    "blank",
    "line"
  ],
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "browser": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "ps-dev-tools.helloWorld",
        "title": "%extension.command.hello.title%"
      }
    ],
    "configuration": {}
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18"
  }
}